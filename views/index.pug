html
	head
		title#title work timer
	body
		div(class='container')
			div(class='jumbotron')
				h1(class='display-3') MODERN HIPSTER TIMER
				h2(id='timer', class='display-1') 00:00
				button(id='start', class='btn btn-lg btn-primary col-xs-4') start
				button(id='stop', class='btn btn-lg btn-primary col-xs-4') stop
				button(id='reset', class='btn btn-lg btn-primary col-xs-4') reset
			audio#tick
				source(src='/sounds/tick.mp3')
			audio#timesUp
				source(src='/sounds/timesup.mp3')
			h4 settings
			div(class='form-check')
				input(id='mute', class='form-check-input', type='checkbox', name='agreement', unchecked)
				label(for='mute', class='form-check-label') mute?
				input#minutes(type='number', name='minutes', min='1', max='30')
	script(src='https://code.jquery.com/jquery-3.2.1.js')
	script(src='/javascripts/index.js')
	link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css', integrity='sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy', crossorigin='anonymous')
