html
	head
		title#title Pomodoro Timer
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css', integrity='sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy', crossorigin='anonymous')
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
		link(rel='shortcut icon' href='/imgs/favicon.ico')
	body
		br
		div(class="container d-flex flex-row-reverse")
				button(type='button', class='btn btn-outline-primary', data-toggle='modal' data-target='#settingsModal')
					i(class='fa fa-wrench', aria-hidden='true')
		br
		div(class='text-center')
			div(class='container')
				h4 POMODORO TIMER
				h2(id='timer', class='display-1') 25:00
				button(id='start', class='btn btn-lg btn-primary col-xs-4', type='button') start
				| &nbsp;
				button(id='stop', class='btn btn-lg btn-primary col-xs-4', type='button') stop
				| &nbsp;
				button(id='reset', class='btn btn-lg btn-primary col-xs-4') reset
			audio#tick
				source(src='/sounds/tick.mp3')
			audio#timesUp
				source(src='/sounds/timesup.mp3')
		div(class='modal fade', id='settingsModal')
			div(class='modal-dialog')
				div(class='modal-content')
					div(class='modal-header')
						h4(class='modal-title') Settings
					div(class='modal-body')
						form
							div(class='form-group row')
								label(for='minutes', class='col-form-label col-3') minutes
								div(class='col-4')
									input#minutes(type='number', class='form-control' name='minutes', min='1', max='30', value='25')
							div(class='form-check')
								input(id='mute', class='form-check-input', type='checkbox', checked)
								label(for='mute', class='form-check-label') mute?
					div(class='modal-footer')
						button#save(type='button', class='btn btn-primary', data-dismiss="modal") Save
		footer(class='fixed-bottom text-center bg-dark text-light') 
			div(class='container') Created by Sawyer Burnett
				br
				a(href='http://github.com/burnett2k', target='_blank') GitHub
				br
				a(href='http://linkedin.com/in/sawyer-burnett-9176411b', target='_blank') Linkedin
	script(src='https://code.jquery.com/jquery-3.2.1.js')
	script(src='/javascripts/index.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js', integrity='sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4', crossorigin='anonymous')